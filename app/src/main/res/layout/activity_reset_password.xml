<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/r111"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="Reset Password"
            android:textStyle="bold"/>


    </RelativeLayout>

    <EditText
        android:layout_below="@+id/r111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/find_phone_number"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:background="@drawable/input_design"
        android:hint="Please Write your phone number"/>

    <TextView
        android:layout_below="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security Questions?"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="35dp"
        android:id="@+id/title_question"

        />
    <EditText
        android:layout_below="@+id/title_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_1"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:background="@drawable/input_design"
        android:hint="Where your parents met,first time?"/>
    <EditText
        android:layout_below="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_2"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:background="@drawable/input_design"
        android:hint="Whats your favorite supper hero?"/>

    <Button
        android:layout_below="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verify_btn"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:background="@drawable/button"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        />

</RelativeLayout>